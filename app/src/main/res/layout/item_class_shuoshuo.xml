<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <com.huida.kindergarten.view.CircleImageView
            android:id="@+id/iv_shuoshuo_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/temp_head"
            app:civ_border_overlay="false"
            app:civ_border_width="0dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_shuoshuo_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="宝宝1234**1234567890"
                android:textSize="@dimen/subTitle_text_size" />

            <TextView
                android:id="@+id/tv_shuoshuo_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="3dp"
                android:text="1个小时前"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_item_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_top"
        android:lineSpacingExtra="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp"
        android:text="八宝抱抱抱哦宝博爱博爱博爱博爱八宝抱抱抱哦宝博爱博爱博爱博爱八宝抱抱抱哦宝博爱博爱博爱博爱" />

    <com.w4lle.library.NineGridlayout
        android:id="@+id/nine_gv"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/tv_item_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:paddingBottom="5dp" />

    <LinearLayout
        android:id="@+id/ll_comment_zan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/nine_gv"
        android:orientation="horizontal"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_zan_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="赞" />

            <TextView
                android:id="@+id/tv_comment_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="7" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="评论" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingRight="10dp">

            <ImageView
                android:id="@+id/iv_zan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/zan_normal" />

            <ImageView
                android:id="@+id/iv_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:src="@mipmap/comment" />

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_zan_blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_comment_zan"
        android:src="@mipmap/zan_blue"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/tv_zan_names"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_zan_blue"
        android:text="陈晓爸爸，陈晓妈妈"
        android:layout_alignBottom="@id/iv_zan_blue"
        android:layout_marginLeft="6dp"/>

    <ListView
        android:id="@+id/lv_comment_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tv_zan_names"
        android:layout_alignLeft="@id/tv_zan_names"
        android:layout_marginTop="5dp"/>

</RelativeLayout>