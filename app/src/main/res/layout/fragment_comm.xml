<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/defaultBackground"
    android:orientation="vertical">

    <include
        android:id="@+id/id_main_toolbar"
        layout="@layout/toolbar"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/defaultCutLine"/>

    <LinearLayout
        style="@style/CommListItemGroup">

        <com.huida.kindergarten.view.imageview.BadgeImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            app:badgeSrc="@mipmap/ic_comm_letter"
            app:isCircle="true"/>

        <TextView
            style="@style/CommListItemText"
            android:text="园长信箱"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:layout_weight="0.05"
            android:scaleType="fitXY"
            android:src="@drawable/comm_right_arrow"/>

    </LinearLayout>

    <LinearLayout
        style="@style/CommListItemGroup">

        <com.huida.kindergarten.view.imageview.BadgeImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            app:badgeSrc="@mipmap/ic_comm_contacts"
            app:isCircle="true"/>

        <TextView
            style="@style/CommListItemText"
            android:text="通讯录"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:layout_weight="0.05"
            android:scaleType="fitXY"
            android:src="@drawable/comm_right_arrow"/>

    </LinearLayout>

    <LinearLayout
        style="@style/CommListItemGroup">

        <com.huida.kindergarten.view.imageview.BadgeImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            app:badgeSrc="@mipmap/ic_comm_service"
            app:isCircle="true"/>

        <TextView
            style="@style/CommListItemText"
            android:text="APP客服咨询"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:layout_weight="0.05"
            android:scaleType="fitXY"
            android:src="@drawable/comm_right_arrow"/>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/id_comm_rv_messages"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>

</LinearLayout>
